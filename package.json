{
    "name": "userscript-esbuild-ts",
    "type": "commonjs",
    "devDependencies": {
        "@swc/core": "^1.3.25",
        "@types/greasemonkey": "^4.0.4",
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "bun-types": "^0.1.0",
        "esbuild": "^0.15.12",
        "esbuild-plugin-eslint": "^0.1.1",
        "esbuild-ssr-css-modules-plugin": "^0.1.6",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "scripts": {
        "buildUserScript": "node build/dist/ mode=build",
        "buildUserScriptDev": "node build/dist/ mode=dev",
        "buildExtension": "node build/dist/ mode=ext",
        "startHotReloadServer": "node build/dist/sockserver.js",
        "startExpressServer": "node build/dist/server.js",
        "check": "npm --prefix=build/ run buildCheck",
        "build:u": "npm run check && npm run buildUserScript",
        "build:e": "npm run check && npm run buildExtension",
        "build:builder": "npm run check && npm --prefix=build/ run build",
        "prebuild": "npm run check",
        "build": "npm run buildUserScript & npm run buildExtension",
        "predev": "npm run check",
        "dev": "npm run startHotReloadServer & npm run startExpressServer & npm run buildUserScriptDev"
    },
    "userScript": {
        "@name": "Pixiv Automatic exclusion search",
        "@name:zh-CN": "Pixiv 自动排除搜索",
        "@name:ja": "Pixiv 自動で除外検索",
        "@version": "0.2.0",
        "@license": "MIT",
        "@author": "yakisova41",
        "@namespace": "https://yakisova.com/pixiv-tag-filter/",
        "@description": "Pixiv Automatically exclude specific tags, auto filter with \"users\"",
        "@description:ja": "Pixiv 特定タグを自動除外 users入りのみに自動絞り込みする機能を追加します。",
        "@description:zh-CN": "Pixiv 自动排除特定标签，自动过滤与 \"users\"。",
        "@match": "https://www.pixiv.net/*",
        "@grant": "none",
        "devServer": {
            "port": 3004,
            "host": "localhost",
            "websocket": 50054,
            "hot": true
        },
        "esbuild": {
            "entryPoints": [
                "src/index.ts"
            ],
            "minify": false
        }
    }
}
